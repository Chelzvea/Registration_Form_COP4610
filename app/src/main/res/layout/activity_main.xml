<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Microchip ID-->
    <TextView
        android:id="@+id/textMicrochipID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microchip ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/editMicrochipID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:hint="ID"
        app:layout_constraintBottom_toBottomOf="@id/editMicrochipID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editMicrochipID"

        />
    <!-- NAME -->
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/editMicrochipID"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- GENDER -->
    <TextView
        android:id="@+id/textGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- EMAIL -->
    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/textGender"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ACCESS CODE -->
    <TextView
        android:id="@+id/textAccessCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Code"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CONFIRM CODE -->
    <TextView
        android:id="@+id/textConfirmCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Code"
        app:layout_constraintTop_toBottomOf="@+id/textAccessCode"
        app:layout_constraintStart_toStartOf="parent"/>




    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/confirm_button"
        />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reset_button" />



</androidx.constraintlayout.widget.ConstraintLayout>
